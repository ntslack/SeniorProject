@model SeniorProject.Models.UserAccount
@{
    ViewData["Title"] = "Register";
}


<div class="text-center" style="align-items: center">

    <h2>Register</h2>

    <form asp-controller="Home" asp-action="Register" method="post">
        @if (ViewBag.Message != null)
        {
            <br />
            <div class="text-danger">
                <div class="form-control">
                    <div class="col-md-10">@ViewBag.Message</div>
                </div>
            </div>
            <br />
        }

        <div class="form-group">
            <label asp-for="firstName" class="col-md control-label">First Name</label>
            <div class="col-md-4 offset-md-4">
                <input asp-for="firstName" class="form-control" required/>
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="lastName" class="col-md control-label">Last Name</label>
            <div class="col-md-4 offset-md-4">
                <input asp-for="lastName" class="form-control" required/>
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="username" class="col-md control-label">Username</label>
            <div class="col-md-4 offset-md-4">
                <input asp-for="username" class="form-control" required/>
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="password" class="col-md control-label">Password</label>
            <div class="col-md-4 offset-md-4">
                <input asp-for="password" class="form-control" required/>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="mobile" class="col-md control-label">Phone Number</label>
            <div class="col-md-4 offset-md-4">
                <input asp-for="mobile" class="form-control" required/>
                <span asp-validation-for="mobile" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-dark">Register</button>
        </div>
    </form>

</div>